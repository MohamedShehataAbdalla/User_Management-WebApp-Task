@model User_Management_WebApp.Areas.Admin.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>User Details</h4>
<hr />

<section class="details">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="First_Name" class="form-label"></label>
                        <input asp-for="First_Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Last_Name" class="form-label"></label>
                        <input asp-for="Last_Name" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-check form-switch mt-4">
                        <input asp-for="Active" class="form-check-input" type="checkbox" role="switch" id="Active" disabled>
                        <label asp-for="Active" class="form-check-label" for="Active"></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control"  disabled />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" disabled />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input type="datetime" asp-for="DateOfBirth" class="form-control" aria-required="true" disabled />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-center  mt-4">
                        <label asp-for="Gender" class="form-label pe-5"></label>
                        <div class="form-check form-check-inline">
                            <input type="radio" asp-for="Gender" class="form-check-input" value="true" id="male" disabled />
                            <label for="male" asp-for="Gender" class="form-check-label">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" asp-for="Gender" class="form-check-input" value="false" id="female" disabled />
                            <label for="female" asp-for="Gender" class="form-check-label">Female</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3 text-center">
                        @if (Model.Image != null)
                        {
                            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" class="img-thumbnail" style="height:210px; width:210px;" />
                        }
                        else
                        {
                            if (Model.Gender == true)
                            {
                                <img src="~/img/men.png" class="img-thumbnail" style="height: 210px; width: 210px; " />

                            }
                            else
                            {
                                <img src="~/img/women.png" class="img-thumbnail" style="height: 210px; width: 210px; " />
                            }
                        }

                    </div>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled p-0 m-0">
                        <h4>Roles</h4>
                        @foreach (var role in Model.RolesName)
                        {
                            <li class="pt-1 pb-1 "><span class="badge rounded-pill bg-info text-bg-info p-1 ps-2 pe-2"> @role </span></li>

                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="Bio" class="form-label"></label>
                        <textarea asp-for="Bio" class="form-control" style="height: 100px"  disabled></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</section>
