@model RoleViewModel

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header-page">

    <div class="row">
        <div class="col-md-6 justify-content-between">
            <h3><i class="fa-solid fa-shield-halved"></i> <span class="text-primary">Role Details</span></h3>
        </div>
        <div class="col-md-6 text-end">
        </div>
    </div>
    <hr />
</div>

<div class="content-page">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check form-switch mt-4">
                        <input asp-for="Active" class="form-check-input" type="checkbox" role="switch" id="Active" disabled>
                        <label asp-for="Active" class="form-check-label" for="Active"></label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="CreatedBy" class="form-label"></label>
                        <input type="text" asp-for="CreatedBy" class="form-control" aria-required="true" disabled />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="CreatedAt" class="form-label"></label>
                        <input type="text" asp-for="CreatedAt" class="form-control" aria-required="true" disabled />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label asp-for="UpdatedAt" class="form-label"></label>
                        <input type="text" asp-for="UpdatedAt" class="form-control" aria-required="true" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="button-group">
        @if (@Model.DeletedAt == null)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa-solid fa-pen"></i> Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-angle-left"></i> Back to List</a>

        }
        else
        {
            <a asp-action="Archive" class="btn btn-secondary"><i class="fa-solid fa-angle-left"></i> Back to Archive</a>
        }
    </div>
</div>